<p id="notice"><%= notice %></p>

<h1>Listing Cyclists</h1>

<table>
  <thead>
    <tr>
      <th>Female with helmet</th>
      <th>Female no helmet</th>
      <th>Female sidewalk</th>
      <th>Female wrong way</th>
      <th>Male with helmet</th>
      <th>Male no helmet</th>
      <th>Male sidewalk</th>
      <th>Male wrong way</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cyclists.each do |cyclist| %>
      <tr>
        <td><%= cyclist.female_with_helmet %></td>
        <td><%= cyclist.female_no_helmet %></td>
        <td><%= cyclist.female_sidewalk %></td>
        <td><%= cyclist.female_wrong_way %></td>
        <td><%= cyclist.male_with_helmet %></td>
        <td><%= cyclist.male_no_helmet %></td>
        <td><%= cyclist.male_sidewalk %></td>
        <td><%= cyclist.male_wrong_way %></td>
        <td><%= link_to 'Show', cyclist %></td>
        <td><%= link_to 'Edit', edit_cyclist_path(cyclist) %></td>
        <td><%= link_to 'Destroy', cyclist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

